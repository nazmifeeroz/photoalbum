<div class="container wrapper">
	<div class="row">
		<div class="col-md-3"></div>
		<div class="col-md-6">
	<h4>Add new photo</h4><br>

	<%= form_for @photo, url: album_photos_path, method: :post do |f| %>
		
		<div class="md-form">
			<%= f.label 'Photo Name' %>
			<%= f.text_field :photoname, class: 'form_control', :required => true %>
		</div>
		
		<%= f.file_field :image, class: 'form_control' %>
		<br><br>
		<%= f.submit "Add Photo", class: 'btn btn-primary' %>
	<% end %>
	</div>
	</div>
</div>